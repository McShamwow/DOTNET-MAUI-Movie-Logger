<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="movieLogger.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:movieLogger"
    xmlns:pages="clr-namespace:movieLogger.Pages"
    xmlns:icons="clr-namespace:movieLogger"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent Title="Home"
                  Icon="cat.png"
                  ContentTemplate="{DataTemplate local:MainPage}" />
    <ShellContent Title="Logger"
                  Icon="cat.png"
                  ContentTemplate="{DataTemplate local:NewLogPage}" />
    <ShellContent Title="Watchlist"
                  Icon="cat.png"
                  ContentTemplate="{DataTemplate pages:WatchlistPage}" />
    <ShellContent Title="Statistics"
                  Icon="cat.png"
                  ContentTemplate="{DataTemplate pages:StatisticsPage}" />
    <ShellContent Title="About"
                  Icon="about.png"
                  ContentTemplate="{DataTemplate local:AboutPage}" />
</Shell>
    