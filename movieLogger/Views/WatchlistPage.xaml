<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="movieLogger.Pages.WatchlistPage"
             Title="Watchlist"
             xmlns:viewmodel="clr-namespace:movieLogger.Pages">
            <!--xmlns:viewmodel="clr-namespace:movieLogger.ViewModel"-->
            <!--:DataType="viewmodel:WatchlistViewModel"-->
    
    <StackLayout HorizontalOptions="Center">
        <Label 
            Text="Welcome to the Watchlist Page!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <ListView BackgroundColor="Transparent"
                  VerticalScrollBarVisibility="Always"
                  IsVisible="true"
                  ItemsSource="{Binding titles}"
                  x:Name="titlesList">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <SwipeView>
                        <SwipeView.RightItems>
                            <SwipeItems>
                                <SwipeItem Text="Delete"
                                           BackgroundColor="Red"/>
                            </SwipeItems>
                        </SwipeView.RightItems>
                    </SwipeView>
                </DataTemplate>    
            </ListView.ItemTemplate>
        </ListView>

    </StackLayout>
</ContentPage>